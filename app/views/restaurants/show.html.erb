<p id="notice"><%= notice %></p>

<div class="row">
  
  <div class="col-md-3">
    
    <%= image_tag @restaurant.image_url %>
  
    <h2>
      <%= @restaurant.name %>
    </h2>
    
    <p>
      <strong>Dirección:</strong>
      <%= @restaurant.address %>
    </p>
    
    <p>
      <strong>Teléfono:</strong>
      <%= @restaurant.phone %>
    </p>
    
    <p>
      <strong>Sitio Web:</strong>
      <%= link_to @restaurant.website,  @restaurant.website, class: "btn btn-link" %>
    </p>
    
    <p>
      <strong>Calificación:</strong>
      <div class="star-rating" data-score="<%= @promedio_raiting %>"></div>
      <p><%= @reviews.length %> críticas.</p>
    </p>
  </div>
  
  <div class="col-md-9">
    <% if @reviews.blank? %>
      <h3>Se el primero en calificar este restaurante !!!</h3>
    <% else %>
      <div>
        <h2>Críticas</h2>
        <table class="table">
          <thead>
            <tr>
              <th>Usuario</th>
              <th>Comentario</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
            <tr>
              <td><h4><%= review.user_name %></h4><%= review.created_at.strftime("%-m/%-d/%y") %></td>
              <td>
                <%= h(review.comment).gsub(/\n/, '<br/>').html_safe %><br>
                <div class="star-rating" data-score="<%= review.raitng %>"></div>
                  <% if user_signed_in?
                    if current_user.id == review.user_id %>
                      <p>
                        <%= link_to 'Editar', edit_restaurant_review_path(@restaurant, review), class: 'btn btn-link' %> | 
                        <%= link_to 'Eliminar', restaurant_review_path(@restaurant, review), method: :delete, class: 'btn btn-link' %>
                      </p>
                  <% end 
                  end %>
              </td>
            </tr>
            <% end %>
        </table>
      </div>
    <% end %>
  </div>
  
</div>

<%= link_to 'Back', restaurants_path, class:"btn btn-link" %>
<% if user_signed_in? %>
  <%= link_to 'Nueva Crítica', new_restaurant_review_path(@restaurant.id), class:"btn btn-primary" %>
<% end %>

<script>
  $('.star-rating').raty({
    path: 'https://storage.googleapis.com/imagestipoyelp/raty/images/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>